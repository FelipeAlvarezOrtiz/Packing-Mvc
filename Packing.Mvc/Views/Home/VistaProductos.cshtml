            let presentacionSelected = $("#presentacionSelected").val();
            let dataString = "{ \"nombreProducto\" : \"" + nombreProducto + "\", \"idFormato\" : " + formatoSelected + ", \"idGrupo\" : " + grupoSelected + ", \"idPresentacion\" : " + presentacionSelected +" }";
